{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "outDir": "./dist",
    "typeRoots": ["types", "node_modules/@types"]
  },
  "exclude": ["./dist/**/*"]
}
