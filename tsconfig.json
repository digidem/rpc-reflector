{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "declarationDir": "dist",
    "typeRoots": ["types", "node_modules/@types"]
  },
  "files": ["index.js"],
  "exclude": ["./dist/**/*"]
}
